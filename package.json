{
  "name": "@gurja/eslint-config",
  "version": "5.0.2",
  "description": "A simple to use ESlint configuration",
  "keywords": [
    "eslint",
    "config",
    "eslint-config",
    "typescript",
    "react",
    "next",
    "node"
  ],
  "homepage": "https://github.com/leogurja/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/leogurja/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leogurja/eslint-config.git"
  },
  "license": "MIT",
  "author": "Leonardo Gurgel",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./node": {
      "import": "./dist/node.js",
      "types": "./dist/node.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./next": {
      "import": "./dist/next.js",
      "types": "./dist/next.d.ts"
    },
    "./disableTypeChecking": {
      "import": "./dist/disableTypeChecking.js",
      "types": "./dist/disableTypeChecking.d.ts"
    },
    "./jest": {
      "import": "./dist/jest.js",
      "types": "./dist/jest.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist",
    "@types"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier -w .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest"
  },
  "dependencies": {
    "@eslint/js": "^9.14.0",
    "@humanwhocodes/gitignore-to-minimatch": "^1.0.2",
    "@next/eslint-plugin-next": "^15.4.4",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "find-up": "^7.0.0",
    "globals": "^16.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.9",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.16.5",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "eslint": ">=9",
    "typescript": "^5.8.3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  }
}
